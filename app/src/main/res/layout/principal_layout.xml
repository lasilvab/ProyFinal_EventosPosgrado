<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:navigation="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_navigation_drawer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar"/>
        <FrameLayout
            android:id="@+id/mainContenedor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pantalla_menu"/>
        </FrameLayout>
    </LinearLayout>

            <android.support.design.widget.NavigationView
                android:id="@+id/l_navigation_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                navigation:headerLayout="@layout/navegation_header"
                navigation:menu="@menu/navegation_menu"
                navigation:elevation="18dp">
            </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>